{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "functions/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/checkuser",
        "function": "CheckUser"
      },
      {
        "source": "/api/onesignal",
        "function": "OneSignal"
      }
    ],
    "headers": [
      {
        "source": "/**",
        "headers": [
          {
            "key": "Access-Control-Allow-Origin",
            "value": "*"
          },
          {
            "key": "Cache-Control",
            "value": "public, max-age=2592000, s-maxage=2592000"
          }
        ]
      },
      {
        "source": "/assets/js/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=60, s-maxage=60"
          }
        ]
      },
      {
        "source": "/node_modules/**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public, max-age=31536000, s-maxage=31536000"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  }
}