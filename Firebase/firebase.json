{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint"
    ]
  },
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "functions/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "app"
      },
      {
        "source": "/api/checkuser",
        "function": "CheckUser"
      },
      {
        "source": "/api/onesignal",
        "function": "OneSignal"
      }
    ],
    "headers": [{
      "source": "**",
      "headers": [{
        "key": "Access-Control-Allow-Origin",
        "value": "**"
      },
      {
        "key": "Accept-Encoding",
        "value": "gzip"
      },
      {
        "key": "Content-Encoding",
        "value": "gzip"
      },
      {
        "key": "Cache-Control",
        "value": "public, max-age=604800, s-maxage=604800"
      }]
    },
    { "source": "/assets/js/**",
      "headers": [{
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=86400"
        }] 
    },
    { "source": "/node_modules/**",
      "headers": [{
        "key": "Cache-Control",
        "value": "public, max-age=31536000, s-maxage=31536000"
      }]}]
  },
  "storage": {
    "rules": "storage.rules"
  }
}
