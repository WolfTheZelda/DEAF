<?xml version='1.0' encoding='utf-8'?>
<widget id="com.tecwolf.deaf" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>DEAF - Ação Filosófica</name>
    <description>
        Aplicativo para o Debate Filosófico.
    </description>
    <icon src="./www/img/icon.png" />
    <author email="email@tecwolf.com.br" href="http://tecwolf.com.br/">
        TecWolf
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
